<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto.Views.Prueba"
             Title="Espacios de Estacionamiento">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Cargar Espacios" Command="{Binding LoadParkingSpacesCommand}" />
            <ListView ItemsSource="{Binding ParkingSpaces}" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding id}" />
                                <Label Text="{Binding isOccupied, StringFormat='Ocupado: {0}'}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>